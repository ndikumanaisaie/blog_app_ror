<section class='comments-container'>
  <h3>Comments</h3>
  <% unless any_comments?(@post) %>
    <p>No comments yet.</p>
  <% else %>
    <% @post.comments.each do |comment| %>
      <div>
        <i><%= comment.author.name %>: <%= comment.text %></i>
      </div>
    <% end %>
  <% end %>
</section>